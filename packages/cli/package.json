{
  "name": "@gitgov/cli",
  "version": "1.0.4",
  "description": "ðŸš€ AI-first governance CLI for intelligent work. Install with `npm install -g @gitgov/cli` and start governing your projects with interactive dashboards, task management, and workflow automation.",
  "type": "module",
  "main": "build/dist/gitgov.mjs",
  "bin": {
    "gitgov": "./build/dist/gitgov.mjs"
  },
  "files": [
    "build/dist"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "build": "pnpm clean && pnpm build:full",
    "build:esm": "mkdir -p build/dist && esbuild src/index.ts --bundle --platform=node --format=esm --target=node20 --outfile=build/dist/gitgov.mjs --jsx=automatic --jsx-import-source=react --external:react-devtools-core --external:commander --external:ink --external:react --external:assert --external:events --external:util --external:path --external:fs --external:crypto && chmod +x build/dist/gitgov.mjs",
    "build:cjs": "mkdir -p build/dist && esbuild src/index.ts --bundle --platform=node --format=cjs --target=node20 --outfile=build/dist/cli-tui.cjs --jsx=automatic --jsx-import-source=react --external:react-devtools-core --external:commander --external:ink --external:react --external:@ink/ui --external:yoga-layout-prebuilt --external:assert --external:events --external:util --external:path --external:fs --external:crypto",
    "build:full": "pnpm build:esm && pnpm build:cjs && cp build/dist/cli-tui.cjs build/dist/bundle.cjs",
    "build:test": "mkdir -p build/dist-cjs && tsc -p tsconfig.cjs.json",
    "sea:tui": "node --experimental-sea-config sea-config-tui.json",
    "build:binaries": "chmod +x scripts/build-binaries.sh && ./scripts/build-binaries.sh",
    "start": "./build/dist/gitgov.mjs",
    "dev": "tsx src/index.ts",
    "test": "pnpm build:test && jest",
    "test:all": "pnpm build && pnpm test && pnpm pack:build",
    "prepublishOnly": "pnpm build",
    "pack:build": "mkdir -p build && pnpm pack && mv *.tgz build/",
    "build:release": "pnpm build && pnpm build:binaries",
    "release": "pnpm publish",
    "install:production": "curl -sSL https://get.gitgovernance.com | sh",
    "verify": "pnpm build && pnpm test && echo 'All checks passed!'"
  },
  "keywords": [
    "gitgovernance",
    "ai-first",
    "workflow",
    "governance",
    "cli",
    "tui",
    "npm",
    "project-management",
    "task-management",
    "dashboard",
    "interactive",
    "productivity",
    "automation",
    "collaboration"
  ],
  "author": "GitGovernance Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gitgovernance/monorepo.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/gitgovernance/monorepo/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/gitgovernance/monorepo/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@gitgov/core": "^1.0.1",
    "commander": "^11.1.0"
  },
  "optionalDependencies": {
    "ink": "^4.4.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.24",
    "dotenv": "^17.2.2",
    "esbuild": "^0.19.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
