{
  "name": "@gitgov/core",
  "version": "1.1.0",
  "description": "SDK for the GitGovernance ecosystem, providing a type-safe, local-first API to manage identities, agents, and workflows.",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "clean:generated": "rm -rf src/schemas/generated/* src/types/generated/*",
    "sync:schemas": "tsx scripts/sync-schemas.ts",
    "sync:workflow-configs": "tsx scripts/sync-workflow-configs.ts",
    "compile:types": "tsx scripts/compile-json-to-types.ts",
    "generate:indexes": "tsx scripts/generate-indexes.ts",
    "validate:schemas": "tsx scripts/validate-schemas.ts",
    "prebuild": "pnpm compile:types && pnpm generate:indexes",
    "build": "pnpm clean && tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "git",
    "governance",
    "ai",
    "workflows",
    "sdk",
    "typescript",
    "local-first"
  ],
  "author": "GitGovernance Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitgovernance/monorepo.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/gitgovernance/monorepo/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/gitgovernance/monorepo/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.18.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
