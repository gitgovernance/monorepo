{
  "name": "@gitgov/core",
  "version": "1.0.1",
  "description": "SDK for the GitGovernance ecosystem, providing a type-safe, local-first API to manage identities, agents, and workflows.",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "clean:generated": "rm -rf src/schemas/generated/* src/types/generated/*",
    "sync:schemas": "tsx scripts/sync-schemas.ts",
    "sync:workflow-configs": "tsx scripts/sync-workflow-configs.ts",
    "compile:types": "tsx scripts/compile-json-to-types.ts",
    "generate:indexes": "tsx scripts/generate-indexes.ts",
    "validate:schemas": "tsx scripts/validate-schemas.ts",
    "prebuild": "pnpm compile:types && pnpm generate:indexes",
    "build": "pnpm clean && tsc",
    "build:ci": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "git",
    "governance",
    "ai",
    "workflows",
    "sdk",
    "typescript",
    "local-first"
  ],
  "author": "GitGovernance Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gitgovernance/monorepo.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/gitgovernance/monorepo/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/gitgovernance/monorepo/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}