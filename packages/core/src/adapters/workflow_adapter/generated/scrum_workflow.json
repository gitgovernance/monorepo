{
  "id": "1700000000-workflow-scrum-framework",
  "name": "Scrum Framework",
  "description": "Agile Scrum methodology with sprint-based workflow and defined roles",
  "state_transitions": {
    "submit": {
      "from": [
        "draft"
      ],
      "to": "review",
      "requires": {
        "command": "gitgov task submit",
        "signatures": {
          "__default__": {
            "role": "product_owner",
            "capability_roles": [
              "product:owner"
            ],
            "min_approvals": 1
          }
        }
      }
    },
    "approve": {
      "from": [
        "review"
      ],
      "to": "ready",
      "requires": {
        "command": "gitgov task approve",
        "custom_rules": [
          "task_fits_in_sprint_capacity"
        ]
      }
    },
    "activate": {
      "from": [
        "ready",
        "paused"
      ],
      "to": "active",
      "requires": {
        "event": "sprint_started",
        "custom_rules": [
          "task_assigned_to_team_member"
        ]
      }
    },
    "complete": {
      "from": [
        "active"
      ],
      "to": "done",
      "requires": {
        "command": "gitgov task complete",
        "signatures": {
          "__default__": {
            "role": "scrum_master",
            "capability_roles": [
              "scrum:master"
            ],
            "min_approvals": 1
          }
        }
      }
    },
    "archive": {
      "from": [
        "done"
      ],
      "to": "archived",
      "requires": {
        "command": "gitgov task archive"
      }
    },
    "pause": {
      "from": [
        "active",
        "review"
      ],
      "to": "paused",
      "requires": {
        "event": "feedback_blocking_created"
      }
    }
  },
  "custom_rules": {
    "task_fits_in_sprint_capacity": {
      "description": "Task story points must fit within remaining sprint capacity",
      "validation": "sprint_capacity"
    },
    "task_assigned_to_team_member": {
      "description": "Task must be assigned to an active team member",
      "validation": "assignment_required"
    }
  },
  "agent_integration": {
    "description": "Agent integration proposal for Scrum methodology automation",
    "required_agents": [
      {
        "id": "agent:scrum-master",
        "triggers": [
          {
            "event": "sprint_end_approaching",
            "action": "create_sprint_review_tasks"
          },
          {
            "cron": "0 9 * * 1-5",
            "event": "daily_standup_time",
            "action": "generate_standup_report"
          },
          {
            "event": "impediment_detected",
            "action": "escalate_to_product_owner"
          }
        ]
      },
      {
        "id": "agent:product-owner-assistant",
        "triggers": [
          {
            "event": "backlog_grooming_needed",
            "action": "prioritize_product_backlog"
          },
          {
            "event": "sprint_planning_started",
            "action": "assist_sprint_planning"
          }
        ]
      }
    ]
  }
}
